<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HarvestSummary.HarvestSummaryPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="@color/displayBar"
        android:id="@+id/title_container">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:id="@+id/back_arrow">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:weightSum="100"
                android:id="@+id/app_name_container"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="90"
                    android:text="@string/harvest_header"
                    android:textColor="@color/colorWhite"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:padding="@dimen/dimen_10dp">

                </TextView>

                <TextView
                    android:id="@+id/donotpay_app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:text="v1.0.1"
                    android:textColor="@color/colorWhite"
                    android:textAlignment="viewStart"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:padding="@dimen/dimen_10dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>


        <!--<ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:id="@+id/options">

        </ImageView>-->


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/view_tg_harvest_summary_bt"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/displayBar"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="View TG Harvest Summary"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/view_member_harvest_summary_bt"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/displayBar"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="View Member Harvest Summary"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:orientation="horizontal"
        android:id="@+id/time_staff_container"
        android:layout_weight="30">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="Last Sync Date:"
            android:layout_marginTop="20dp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:id="@+id/sync_date_notifier"
            android:text="01/01/2020"
            android:layout_marginTop="20dp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:id="@+id/staff_id_notifier"
            android:text="T-100000000000AA"
            android:layout_marginTop="25dp">

        </TextView>

    </LinearLayout>

</RelativeLayout>