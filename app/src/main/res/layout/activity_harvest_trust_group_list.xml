<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HarvestSummary.HarvestTrustGroupList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="@color/displayBar"
        android:id="@+id/title_container">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:id="@+id/back_arrow">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:weightSum="100"
                android:id="@+id/app_name_container"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="90"
                    android:text="DO NOT PAY"
                    android:textColor="@color/colorWhite"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:padding="@dimen/dimen_10dp">

                </TextView>

                <TextView
                    android:id="@+id/donotpay_app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:text="v1.0.1"
                    android:textColor="@color/colorWhite"
                    android:textAlignment="viewStart"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:padding="@dimen/dimen_10dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:id="@+id/options">

        </ImageView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/search_page_container"
        android:layout_below="@id/title_container">

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/issue_list_search_view"
            android:layout_weight="20"
            android:layout_below="@id/title_container"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/bg_white_rounded"
            android:queryBackground="@drawable/bg_white_rounded"
            android:submitBackground="@drawable/bg_white_rounded"
            android:layoutDirection="rtl"
            android:queryHint="@string/seach_hint"
            app:queryHint="@string/seach_hint"
            android:iconifiedByDefault="false"
            app:iconifiedByDefault="false"
            app:defaultQueryHint="@string/seach_hint" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/trust_group_title"
        android:layout_below="@id/search_page_container"
        android:layout_above="@id/time_staff_container"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/list_of_trust_group"
                android:padding="6dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/textColorPrimary">

            </TextView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_filter_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="60dp"
                android:backgroundTint="@color/displayBar"
                android:text="Filter"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                app:cornerRadius="12dp"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/trust_group_list_recycler">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:orientation="horizontal"
        android:id="@+id/time_staff_container"
        android:layout_weight="30">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="Last Sync Date:"
            android:layout_marginTop="20dp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:id="@+id/sync_date_notifier"
            android:text="01/01/2020"
            android:layout_marginTop="20dp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:id="@+id/staff_id_notifier"
            android:text="T-100000000000AA"
            android:layout_marginTop="25dp">

        </TextView>

    </LinearLayout>

</RelativeLayout>