<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clearance_location_confirmation_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_layout"
    android:orientation="vertical"
    android:padding="8dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:drawablePadding="5dp"
                android:text="@string/static_village"
                android:textSize="18sp"
                android:id="@+id/village"
                android:textColor="@color/text_color_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:drawablePadding="5dp"
                android:text="@string/static_ik_number"
                android:textSize="18sp"
                android:id="@+id/ik_number"
                android:textColor="@color/text_color_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:drawablePadding="5dp"
                android:text="@string/static_member_id"
                android:textSize="18sp"
                android:id="@+id/member_id"
                android:textColor="@color/text_color_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:drawablePadding="5dp"
                android:text="@string/static_member_name"
                android:textSize="18sp"
                android:id="@+id/member_name"
                android:textColor="@color/text_color_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:drawablePadding="5dp"
                android:text="@string/static_field_id"
                android:textSize="18sp"
                android:id="@+id/field_id"
                android:textColor="@color/text_color_black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawablePadding="5dp"
                android:text="@string/static_village"
                android:textSize="18sp"
                android:id="@+id/bottom_sheet_village"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/text_color_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawablePadding="5dp"
                android:text="@string/static_ik_number"
                android:textSize="18sp"
                android:id="@+id/bottom_sheet_ik_number"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/text_color_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawablePadding="5dp"
                android:id="@+id/bottom_sheet_member_id"
                android:text="@string/static_member_id"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="18sp"
                android:textColor="@color/text_color_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawablePadding="5dp"
                android:text="@string/static_member_name"
                android:textSize="18sp"
                android:id="@+id/bottom_sheet_member_name"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/text_color_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawablePadding="5dp"
                android:text="@string/static_field_id"
                android:textSize="18sp"
                android:id="@+id/bottom_sheet_field_id"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/text_color_black"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="145dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="@color/view_red"
            android:text="@string/cancel"
            android:textColor="@color/text_color_black"
            android:layout_marginEnd="4dp"
            style="?android:attr/buttonBarButtonStyle"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="145dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="@color/view_green"
            android:baselineAligned="false"
            android:text="@string/confirm"
            android:textColor="@color/text_color_black"
            android:layout_marginStart="4dp"
            style="?android:attr/buttonBarButtonStyle"
            android:textSize="16sp" />


    </LinearLayout>


</LinearLayout>